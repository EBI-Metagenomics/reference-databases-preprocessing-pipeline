
// set temp 'work' dir to nobackup
workDir = "/hps/nobackup/rdf/metagenomics/service-team/nextflow-workdir/taxdb_generation_nf/$USER"

executor {
    name = "slurm"
    queueSize = 200
    queueGlobalStatus = true
    submitRateLimit = "10 sec"
    pollInterval = "10 sec"
}

process {

    time = { 4.h  * task.attempt }

    withLabel: 'process_single' {
        cpus          = { 1                   }
        memory        = { 6.GB * task.attempt }
        errorStrategy = { task.exitStatus in ((130..155) + 104) ? 'retry' : 'finish' }
        maxRetries    = 2
    }
    withLabel: 'light' {
        cpus          = 1
        memory        = { 3.GB * task.attempt }
        errorStrategy = { task.exitStatus in ((130..155) + 104) ? 'retry' : 'finish' }
        maxRetries    = 2
    }
    withLabel: 'medium' {
        cpus          = 8
        memory        = { 3.GB * task.attempt }
        errorStrategy = { task.exitStatus in ((130..155) + 104) ? 'retry' : 'finish' }
        maxRetries    = 2
    }
    withLabel: 'heavy' {
        cpus          = 1
        memory        = { 10.GB + (10.GB * (task.attempt-1)) }
        errorStrategy = { task.exitStatus in ((130..155) + 104) ? 'retry' : 'finish' }
        maxRetries    = 2
    }
    withLabel: 'very_heavy' {
        cpus          = 8
        memory        = { 32.GB + (10.GB * (task.attempt-1)) }
        errorStrategy = { task.exitStatus in ((130..155) + 104) ? 'retry' : 'finish' }
        maxRetries    = 2
    }
    withLabel: 'mscluster' {
        cpus          = 32
        memory        = { 256.GB + (10.GB * (task.attempt-1)) }
        time          = 72.h
        errorStrategy = { task.exitStatus == 137 ? 'retry' : 'finish' }
        maxRetries    = 2
    }

}
