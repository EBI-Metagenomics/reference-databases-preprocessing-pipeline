nextflow_process {

    name "Test Process EXTRACT_RFAM_SUBSET"
    script "modules/extract_rfam_subset/main.nf"
    process "EXTRACT_RFAM_SUBSET"
    tag "modules"
    tag "extract_rfam_subset"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = file('${projectDir}/modules/extract_rfam_subset/tests/data/test.cm', checkIfExists: true)
                input[1] = file('${projectDir}/modules/extract_rfam_subset/tests/data/temp_ribo.claninfo', checkIfExists: true)
                input[2] = params.rfam_version
                input[3] = params.rfam_label
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.ribo_cm).match("ribo_cm") },
                { assert snapshot(process.out.ribo_claninfo).match("ribo_claninfo") }
            )
        }

    }

}
